<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tedu.tea.front.server.content.dao.persist.mapper.TagMapper">

    <!-- List<TagListItemVO> list(); -->
    <select id="list" resultMap="TagListItemResultMap">
        SELECT
            id,
            name
        FROM
            content_tag
        WHERE
            parent_id!=0 AND enable=1
        ORDER BY
            sort DESC, id DESC
    </select>

    <resultMap id="TagListItemResultMap"
               type="cn.tedu.tea.front.server.content.pojo.vo.TagListItemVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

</mapper>